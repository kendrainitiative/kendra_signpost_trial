function _kendra_upload_process_csv($nid) {
	$node = node_load($nid);

	if (($handle = fopen($node->field_upload_file[0]['filepath'], 'r')) !== FALSE) {
		$headers = fgetcsv($handle, 1000, ',', '"');

		// remove whitespace from column headers
		array_walk($headers, 'array_trim');
		
		$row = 1;
		$graph = url("node/{$nid}", array('absolute' => TRUE));
		$query = "";
		$triples = array();
    $triple_no = 0;
    $triples[$triple_no] = "";
		while (($data = fgetcsv($handle, 1000, ',', '"')) !== FALSE) {
			foreach ($data as $key => $value) {
				if (!empty($value)) {
					$row_uri = $graph ."/rows#{$row}";
					$relation = $graph .'/relation#'. urlencode($headers[$key]);
					// Encode value as a string
					$triples[$triple_no] .= "\n<{$row_uri}> <{$relation}> \"". addslashes($value) ."\" .\n";
					if (mb_strlen($triples[$triple_no]) > 4000) {
            $triple_no++;
          }
				}
			}

			// creation of cat nodes for solr testing
			$data['source_nid'] = $nid;
			$data['source_row'] = $row;
			//_kendra_uploads_add_cat_node($headers, $data);
			//watchdog('kendra_upload', 'data: '. print_r($data, TRUE));
			//watchdog('kendra_upload', 'headers: '. print_r($headers, TRUE));

			$row++;
			//Temp limit of 5 rows for debugging: if ($row > 5) break;
		}

		if (!empty($triples)) {
			//$response = kendra_rdf_send("DROP GRAPH <{$graph}> ");
			$response = kendra_rdf_send("CLEAR GRAPH <{$graph}> ");
			$response = kendra_rdf_send("CREATE GRAPH <{$graph}> ");
			foreach ($triples as $triple_s) {
  			//$query = "INSERT DATA INTO GRAPH <{$graph}> \n{ {$triple_s} }";
			  //watchdog('kendra_upload', 'length: '. mb_strlen($query));
			  //watchdog('kendra_upload', 'query: '. print_r($query, TRUE));
  			//$response = kendra_rdf_insert($graph, $triple_s);
  			job_queue_add('kendra_rdf_insert', "insert for graph {$graph}", array($graph, $triple_s), '', TRUE);
			}
		}
	}
	fclose($handle);
}

